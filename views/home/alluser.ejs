<!DOCTYPE html>
<html>
<head>
	<title>Home Page</title>
</head>
<body>
	<center>
		<div>
			<h1>User List</h1> 		
		</div>

		<a href="/home"> Back to Home</a> |
		<a href="/logout"> Logout</a><br>

		<table border="1">
			<tr>
				<th>ID</th>
				<th>Name</th>
				<th>Contact</th>
				<th>Username</th>
				<th>Password</th>
				<th>Type</th>
				<th>Action</th>
			</tr>
			<% for(var i=0; i < userlist.length; i++){ %>
			<tr>
				<td><%= userlist[i].id %></td>
				<td><%= userlist[i].name %></td>
				<td><%= userlist[i].contact %></td>
				<td><%= userlist[i].username %></td>
				<td><%= userlist[i].password %></td>
				<td><%= userlist[i].type %></td>
				<td>
					<a href="/home/edit/<%= userlist[i].id %>">EDIT</a> | 
					<a href="/home/delete/<%= userlist[i].id %>">DELETE</a>  
				</td>
			</tr>
			<% } %>
		</table>
	</center>
</body>
</html>