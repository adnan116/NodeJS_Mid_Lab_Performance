<!DOCTYPE html>
<html>
<head>
	<title>Product List</title>
</head>
<body>
	<center>
		<div>
			<h1>Product List</h1> 		
		</div>

		<a href="/home2"> Back to Home</a> |
		<a href="/logout"> Logout</a><br>

		<table border="1">
			<tr>
				<th>ID</th>
				<th>Product Name</th>
				<th>Quantity</th>
				<th>Price</th>
				<th>Action</th>
			</tr>
			<% for(var i=0; i < productlist.length; i++){ %>
			<tr>
				<td><%= productlist[i].id %></td>
				<td><%= productlist[i].name %></td>
				<td><%= productlist[i].quantity %></td>
				<td><%= productlist[i].price %></td>
				<td>
					<a href="/home2/productedit/<%= productlist[i].id %>">EDIT</a> | 
					<a href="/home2/productdelete/<%= productlist[i].id %>">DELETE</a>  
				</td>
			</tr>
			<% } %>
		</table>
	</center>
</body>
</html>